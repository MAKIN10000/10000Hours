-# in app/views/users/new.html.haml
%section
  %div.container-fluid.login
    %div.row
      %div.center.well
        %legend Registration
        -flash.each do |type, msg|
          %div{:class => "alert alert-#{type}", :data=>{:alert=>"alert"}} 
            = msg 
        = form_tag users_path, :method => :post do
          = text_field :user, :user_id, :class=>"form-control",:placeholder=>"Username", :required=> "true"
          %br
          = text_field :user, :email, :class=>"form-control",:placeholder=>"Email", :required=>"true"
          %br
          = text_field :user, :password, :class=>"form-control",:placeholder=>"password", :type=>"password", :required=>"true"
          %br
          = text_field :user, :password_confirmation, :id=>"login_password", :type => "password", :class=> "form-control", :placeholder=>"confirm password", :required=> "true"
          %br
          %button.btn.btn-primary.btnblock{:type=>"submit"} Register 

        =button_to 'login with facebook', '/auth/facebook', class: "facebook_button"
