%div.container-fluid.center.col-md-8
  %div.row
    %div.center.well
      %table#user-table.table.table-hover.table-condensed
        %thead
          %tr
            %th= 'Username'
            %th= 'User ID'
            %th= 'Name'
            %th= 'Email'
            %th= 'options'
            %th= ''
        %tbody
          -@users.each do |user|
            %tr
              %td= link_to "#{user.user_id}", user_path(user)
              %td= user.id
              %td= user.name
              %td= user.email
              -if(user.role == "user")
                %td= button_to "Make Admin", '#', :class => "btn btn-primary", :confirm=> "Are you sure you wish to make #{user.user_id} an admin?"
              -else
                %td= button_to "Revoke Admin", '#', :class => "btn btn-warning", :confirm=> "Are you sure you wish to revoke #{user.user_id}'s admin privilege?"
              %td= button_to "Delete", user_path(user), :class => "btn btn-danger", :method => :delete, :confirm=> "Are you sure you wish to delete #{user.user_id}?"
%script $('#user-table').dynatable();
